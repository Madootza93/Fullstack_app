<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script>
        function showAddNewPlace() {
            var newPlace = document.getElementById('new-place');
            newPlace.style.display = 'block';
        }
    </script>
  </head>
  <body>
    <div class="container d-flex justify-content-center">
        <div class="card mt-5 p-4">

            <div class="header-img">
                <div class="place-icon">
                    <div class="dropdown">
                        <a href="#" class="dropbtn"><img src="/images/sign.png"></a>
                        <div class="dropdown-content">
                            <ul>
                                <% if (!loggedIn) { %>
                                    <li><a href="/login">Login</a></li>
                                <% } else { %>
                                    <li><a href="#" onclick="showAddNewPlace();return false;">Add new place!</a></li>
                                    <li><a href="/logout">Logout</a></li>
                                <% } %>
                            <ul>
                        </div>
                    </div>
                </div>
                <div class="app-icon"><a href="/"><img src="/images/places.png"></a></div>
            </div>
            
            <% if (loggedIn) { %>
            <div class="login-box">
                <div id="new-place">
                    <h2 class="page-title">New Place</h2>
                    <form action="/place/new" method="POST">
                        <div class="place-name"><input type="text" name="placeName" placeholder="Name"></div>
                        <div class="place-icon-link"><input type="text" name="placeIcon" placeholder="Icon URL [http]"></div>
                        <div class="place-url"><input type="text" name="placeUrl" placeholder="Place URL [http]"></div>
                        <div class="place-btn"><button type="submit" class="btn btn-primary">Save</button></div>
                    </form>
                </div>
            </div>
            <% } %>